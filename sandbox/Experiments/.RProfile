.project.dir <- (function() {
  # A little trick from hadley
  #   see StackOverflow no. 1815606
  
  # This will only work on source,
  #   You cannot select and execute the following code
  #   If you need it to reset, source the file
  frame_files <- lapply(sys.frames(), function(x) {
    x$ofile
  })
  frame_files <- Filter(Negate(is.null), frame_files)
  dirname(frame_files[[length(frame_files)]])
})()

.project.name <- basename(.project.dir)

.project.Rproj <- paste(.project.name, '.Rproj', sep = '')
